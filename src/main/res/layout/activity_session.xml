<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="design.detmers.carsetuptracker.Session">

    <EditText
        android:layout_width="60pt"
        android:layout_height="50pt"
        android:layout_alignParentBottom="true"
        android:id="@+id/textI"
        android:hint="Inner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="36sp"
        android:layout_alignTop="@+id/textM"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="60pt"
        android:layout_height="50pt"
        android:layout_alignParentBottom="true"
        android:hint="Middle"
        android:id="@+id/textM"
        android:layout_toRightOf="@+id/textI"
        android:layout_toEndOf="@+id/textI"
        android:textSize="36sp"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="60pt"
        android:layout_height="50pt"
        android:layout_alignParentBottom="true"
        android:hint="Outer"
        android:id="@+id/textO"
        android:layout_toRightOf="@+id/textM"
        android:textSize="36sp"
        android:layout_alignTop="@+id/textM"
        android:textAlignment="center"
        android:inputType="numberDecimal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50pt"
        android:layout_height="30pt"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="accept"/>

    <EditText
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:hint="Temp"
        android:id="@+id/textPSI"
        android:textSize="26sp"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="100pt"
        android:layout_height="80pt"
        android:src="@mipmap/tire_camber"
        android:id="@+id/imageView"
        android:layout_above="@+id/textM"
        android:layout_toRightOf="@+id/textI"
        android:layout_toEndOf="@+id/textI"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="60pt"
        android:layout_height="50pt"
        android:id="@+id/corners"
        android:textSize="36sp"
        android:text="N/A"
        android:layout_alignBottom="@+id/submit"
        android:layout_marginBottom="140dp"
        android:layout_alignLeft="@id/submit"
        android:textAlignment="center"/>

</RelativeLayout>
